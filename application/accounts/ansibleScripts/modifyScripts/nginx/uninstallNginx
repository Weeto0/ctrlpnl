---
- hosts: localhost
  connection: local
  gather_facts: False
  tasks:
    - add_host:
        hostname : "{{ item }}"
        groups: webserver
      loop: "{{ user }}"

- hosts: webserver
  become: yes
  become_method: sudo
  gather_facts: False
  tasks:
    - name: Uninstall Nginx-server
      apt: name={{item}} state=absent
      with_items:
        - postgresql
        - libpq-dev
        - python-psycopg2